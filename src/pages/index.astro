---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.svelte';
import Footer from '../components/Footer.svelte';
import GradientBackground from '../components/ui/GradientBackground.svelte';
import Hero from '../components/sections/Hero.svelte';
import Features from '../components/sections/Features.svelte';
import Community from '../components/sections/Community.svelte';
---

<Layout>
	<Navbar slot="navbar" client:load />
	<GradientBackground client:load />
	<Hero client:idle />
	<Features client:idle />
	<Community client:idle />
	<Footer slot="footer" client:idle />
</Layout>
