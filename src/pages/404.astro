---
import Layout from '../layouts/Layout.astro';
import GradientBackground from '../components/ui/GradientBackground.svelte';
import Button from '../components/ui/Button.svelte';
import DiscordIcon from '../components/icons/DiscordIcon.svelte';
import { siteConfig } from '../config/site';

export const prerender = true;
---

<Layout 
  title="404 - Page Not Found" 
  description="The page you're looking for doesn't exist."
>
  <GradientBackground client:load />
  <div class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4 text-center">
    <h1 class="text-9xl font-bold text-white mb-4">404</h1>
    <h2 class="text-3xl font-semibold text-white mb-4">Page Not Found</h2>
    <p class="text-xl text-gray-300 mb-8 max-w-md">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="flex flex-col sm:flex-row gap-4">
      <Button href="/" variant="primary">
        Back to Home
      </Button>
      <Button href={siteConfig.links.discord} variant="outline">
        <DiscordIcon class="w-5 h-5 mr-2" />
        Report on Discord
      </Button>
    </div>
  </div>
</Layout>
